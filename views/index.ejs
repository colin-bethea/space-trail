<!DOCTYPE html>
<html>

<head>
  <title>Oregon Trail Redux</title>
  <link href="https://fonts.googleapis.com/css?family=Work+Sans:300,400,600,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="stylesheets/style.css" type="text/css" rel="stylesheet">
  <script src="javascripts/jquery-3.1.1.js" type="text/javascript"></script>
  <script src="javascripts/script.js" type="text/javascript"></script>
</head>

<body>
  <div class="container">
    <div class="imgHeader">
    </div>
    <div class="randomEvent">
      <span id="checkPoint"></span>
      <span id="randomEventMessage"></span>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="statsBox">
          <h1><span class="totalDays"></span></h1>
          <ul class="wagonMembers">
          </ul>
          <ul>
            <li><span class="cash"></span>
              <ion-icon name="cash"></ion-icon>
            </li>
            <li><span class="food"></span>
              <ion-icon name="beer"></ion-icon>
            </li>
            <li><span class="medicine"></span>
              <ion-icon name="medkit"></ion-icon>
            </li>
          </ul>
        </div>
      </div>

      <div class="col-md-8" id="homeScreen">
        <h1 id="start">Add yourself and family members:</h1>
        <form id="createParty">
          <div class="form-group">
            <label for="addLeader"></label>
            <input autocomplete="off" type="text" id="addLeader" class="form-control" placeholder="Leader">
          </div>
          <div class="form-group">
            <label for="addMember1"></label>
            <input autocomplete="off" type="text" id="addMember1" class="form-control" placeholder="Member">
          </div>
          <div class="form-group">
            <label for="addMember2"></label>
            <input autocomplete="off" type="text" id="addMember2" class="form-control" placeholder="Member">
          </div>
          <div class="form-group">
            <label for="addMember3"></label>
            <input autocomplete="off" type="text" id="addMember3" class="form-control" placeholder="Member">
          </div>
          <div class="form-group">
            <label for="addMember4"></label>
            <input autocomplete="off" type="text" id="addMember4" class="form-control" placeholder="Member">
          </div>
          <button type="submit">Start Game</button>
        </form>
      </div>



      <div class="col-md-8" id="gameScreen">
        <div class="options">
          <span class="btn btn-default continueOnTrail">Travel Trail</span>
          <span class="btn btn-default crossRiver">Cross the River</span>
          <span class="btn btn-default rest">Rest</span>
          <span class="btn btn-default mourn">Mourn</span>
          <span class="btn btn-default work">Work</span>
          <span class="btn btn-default hunt">Hunt</span>
          <span class="btn btn-default talk">Talk</span>
          <span class="btn btn-default heal">Heal</span>
        </div>
      </div>
      <div class="col-md-8">
        <div class="playAgain">
          <a href="index.html">
            <span class="btn btn-default restartGame">Play Again</span>
          </a>
        </div>
        <div class="events">
          <p id="event"></p>
        </div>
      </div>
    </div>
  </div>
  <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
</body>

</html>